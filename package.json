{
  "name": "backend-evaluation-service",
  "version": "1.0.0",
  "description": "Backend service for CV and project evaluation using AI",
  "main": "dist/app.js",
  "scripts": {
    "start": "node start.js",
    "start:api": "node dist/app.js",
    "start:worker": "node dist/worker.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "dev:worker": "ts-node-dev --respawn --transpile-only src/worker.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:worker\"",
    "build": "tsc"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@chroma-core/default-embed": "^0.1.8",
    "@chroma-core/google-gemini": "^0.1.7",
    "@google/genai": "^1.21.0",
    "@prisma/client": "^6.16.2",
    "@supabase/supabase-js": "^2.38.4",
    "bullmq": "^4.15.4",
    "chromadb": "^3.0.15",
    "chromadb-default-embed": "^2.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "mammoth": "^1.6.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.1",
    "pdf-parse": "^1.1.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
