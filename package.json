    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.4",
    "@types/pdf-parse": "^1.1.4",
    "@types/uuid": "^9.0.7",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10",
    "prisma": "^6.16.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
